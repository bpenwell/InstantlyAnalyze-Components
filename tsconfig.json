{
  "compilerOptions": {
    // Default
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    // Added
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "dist",
    "downlevelIteration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@ben1000240/instantlyanalyze-module": ["../InstantlyAnalyze-Module/src"]
    }
  },
  "include": ["src/**/*", "tst/**/*"],
  "exclude": ["node_modules", "dist"]
}
